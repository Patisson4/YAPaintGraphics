<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:YAPaint.ViewModels"
        WindowState="Maximized"
        x:Class="YAPaint.Views.MainWindow"
        Icon="/Assets/1158164.png"
        Title="YAPaint">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding Open}" />
                <MenuItem Header="Save As...">
                    <MenuItem Header="Raw" Command="{Binding SaveRaw}" />
                    <MenuItem Header="Plain" Command="{Binding SavePlain}" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Exit" Click="Exit" />
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Right"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="5"
                    Width="300">
            <TextBlock Text="ColorSpace:" VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Spacing="10">
                <ComboBox SelectedItem="{Binding SelectedColorSpace}"
                          Items="{Binding ColorSpaceNames}"
                          AutoScrollToSelectedItem="False"
                          SelectionChanged="ColorSpacesComboBox_OnSelectionChanged" />
                <CheckBox IsChecked="True" Content="1" Command="{Binding ToggleFirstChannel}" />
                <CheckBox IsChecked="True" Content="2" Command="{Binding ToggleSecondChannel}" />
                <CheckBox IsChecked="True" Content="3" Command="{Binding ToggleThirdChannel}" />
            </StackPanel>
            <TextBlock Text="Gamma:" VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Spacing="5">
                <NumericUpDown CultureInfo="{Binding InvariantCultureInfo}"
                               Value="{Binding Gamma}"
                               Minimum="0.0"
                               Maximum="5.0"
                               Increment="0.01"
                               FormatString="{}{0:#,0.00}" />
                <Button Content="Apply" Command="{Binding ApplyGamma}" />
                <Button Content="Convert" Command="{Binding ConvertToGamma}" />
            </StackPanel>
        </StackPanel>
        <TextBlock DockPanel.Dock="Bottom"
                   Margin="10"
                   HorizontalAlignment="Left"
                   Text="{Binding Message}" />
        <Image Source="{Binding AvaloniaImage}"
               RenderOptions.BitmapInterpolationMode="Default"
               Margin="5" />
    </DockPanel>

</Window>
